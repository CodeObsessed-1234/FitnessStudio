<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_screen.LoginScreen2"
    android:orientation="vertical"
    android:background="@color/light_black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">
        <ImageView
            android:id="@+id/arrow_back_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:padding="5dp"
            android:contentDescription="@string/SplashScreeImage_description"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/fitness_studio_icon"
            android:contentDescription="@string/SplashScreeImage_description"
            android:padding="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/otp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:textSize="30sp"
            android:textColor="@color/blue"
            android:fontFamily="@font/inter_semibold"
            />
        <TextView
            android:id="@+id/number_text_view_login_screen2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:paddingTop="2dp"
            android:text="@string/a_6_digit_code_has_been_sent"
            android:textAlignment="center"
            android:textColor="@color/green"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
        <EditText
            android:maxLength="1"
            android:layout_margin="5dp"
            android:id="@+id/edit_text_otp_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:autofillHints="none"
            android:background="@drawable/otp_edit_text_background1"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />
        <EditText
            android:maxLength="1"
            android:layout_margin="5dp"
            android:id="@+id/edit_text_otp_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:autofillHints="none"
            android:background="@drawable/otp_edit_text_background1"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />
        <EditText
            android:maxLength="1"
            android:layout_margin="5dp"
            android:id="@+id/edit_text_otp_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:autofillHints="none"
            android:background="@drawable/otp_edit_text_background1"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />
        <EditText
            android:maxLength="1"
            android:layout_margin="5dp"
            android:id="@+id/edit_text_otp_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:autofillHints="none"
            android:background="@drawable/otp_edit_text_background1"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />
        <EditText
            android:maxLength="1"
            android:layout_margin="5dp"
            android:id="@+id/edit_text_otp_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:autofillHints="none"
            android:background="@drawable/otp_edit_text_background1"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />
        <EditText
            android:maxLength="1"
            android:layout_margin="5dp"
            android:id="@+id/edit_text_otp_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:autofillHints="none"
            android:background="@drawable/otp_edit_text_background1"
            android:importantForAutofill="no"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:inputType="number"
            android:textAlignment="center"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/didn_t_receive_the_code"
            android:textColor="@color/green"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:id="@+id/resend_text_view_login_screen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="@string/resend"
            android:textColor="@color/blue"
            android:textSize="18sp"
            tools:ignore="TextContrastCheck" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="20dp">
        <androidx.appcompat.widget.AppCompatButton
            android:onClick="backToLoginScreen"
            android:id="@+id/verify_button_login_screen2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_background"
            android:fontFamily="@font/inter_semibold"
            android:text="@string/verify"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/textColor"
            android:textSize="25sp"
            tools:ignore="VisualLintButtonSize,TextContrastCheck" />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user_interface_fragments.SubscriptionFragment"
    android:orientation="vertical"
    android:background="@color/light_black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fitness_studio_subscription_plan"
            android:textSize="25sp"
            android:gravity="center"
            android:fontFamily="@font/itim"
            android:textColor="@color/blue"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_view_subscription"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buy_subscription"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/buy_subscription"
            android:textAllCaps="false"
            android:background="@drawable/button_background"
            android:fontFamily="@font/inter_semibold"
            android:textSize="25sp"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>